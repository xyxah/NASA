<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.NASA" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="themeColorPrimary">@color/colorPrimary</item>

        <item name="fontFamily">@font/ibarra_real_nova_variable_font_wght</item>
        <item name="android:fontFamily">@font/ibarra_real_nova_variable_font_wght</item>
    </style>

    <style name="Theme.NASA" parent="Base.Theme.NASA" />


    <style name="AppTheme" parent="Theme.NASA">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>


    </style>

    <style name="IndigoTheme" parent="AppTheme">
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="themeColorPrimary">@color/teal_700</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="themeColorPrimary">@color/pink</item>
    </style>

    <style name="IndigoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IndigoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="IndigoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>